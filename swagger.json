  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Get all Tasks",
        "description": "Use a GET request to get all existing tasks",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Create a Task",
        "description": "Use a POST request to create a task with a JSON object",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "example": "any"
                },
                "author": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "summary": "Get a singel Task",
        "description": "Use a Get request with an task id to get a single task",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
